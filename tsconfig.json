{
    "compilerOptions": {
        "lib": [
            "es2023"
        ],
        "types": [
            "node"
        ],
        "module": "NodeNext",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext",
        "declaration": true,
        "outDir": "lib"
    },
    "exclude": [
        "node_modules",
        "lib"
    ]
}